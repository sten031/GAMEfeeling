<h1>ログイン</h1>
<div class="col-xs-12 base new-padding">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col-xs-8 col-xs-offset-4">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, class: "name col-xs-6 form-margin" %>
    </div>

    <div class="col-xs-8 col-xs-offset-4">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "password col-xs-6 form-margin" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="col-xs-8 col-xs-offset-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="col-xs-8 col-xs-offset-4">
      <%= f.submit "ログイン", class: "btn btn-primary form-margin" %>
    </div>

  <% end %>
  <div class="col-xs-8 col-xs-offset-4">
    <%= render "devise/shared/links" %>
  </div>
</div>