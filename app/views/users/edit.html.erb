<div class="col-xs-12">
<%= form_for(@user) do |f| %>
  <div class="field col-xs-8 col-xs-offset-4">
    <%= f.label :"名前" %><br>
    <%= f.text_field :name, class: "col-xs-6 name" %>
  </div>
  <div class="field col-xs-8 col-xs-offset-4">
    <%= f.label :"プロフィール画像" %><br>
    <%= f.attachment_field :image, class: "user_image col-xs-6" %>
  </div>
  <div class="field col-xs-8 col-xs-offset-4">
    <%= f.label :"自己紹介" %><br>
    <%= f.text_area :introduction, class: "introduction col-xs-6" %>
  </div>
  <div class="actions col-xs-8 col-xs-offset-4">
    <%= f.submit '編集完了', class: "col-xs-6 btn btn-primary" %>
<% end %>
  </div>
  <div class="actions col-xs-8 col-xs-offset-4">
<%= link_to '退会',leave_path(@user), class: "col-xs-6 btn btn-danger edit_user_#{@user.id}" %>
  </div>
</div>