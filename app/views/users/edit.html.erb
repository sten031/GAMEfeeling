<h1>プロフィール編集</h1>
<div class="col-xs-12 base edit-padding">

<%= form_for(@user) do |f| %>
  <div class="col-xs-8 col-xs-offset-4">
    <%= render 'layouts/errors', model: f.object %>
    <%= f.label :"名前" %><br>
    <%= f.text_field :name, class: "col-xs-6 form-margin" %>
  </div>

  <div class="col-xs-8 col-xs-offset-4">
    <%= f.label :"プロフィール画像" %><br>
    <%= f.attachment_field :image, class: "col-xs-6 form-margin" %>
  </div>

  <div class="col-xs-8 col-xs-offset-4">
    <%= f.label :"自己紹介" %><br>
    <%= f.text_area :introduction, class: "col-xs-6 form-margin" %>
  </div>

  <div class="actions col-xs-8 col-xs-offset-4">
    <%= f.submit '編集完了', class: "col-xs-6 btn btn-primary form-margin" %>
<% end %>
  </div>

  <div class="actions col-xs-8 col-xs-offset-4">
    <%= link_to '退会',leave_path(@user), class: "col-xs-6 btn btn-danger edit_user_#{@user.id} form-margin" %>
  </div>

</div>