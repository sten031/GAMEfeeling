<div class="col-xs-12">
  <%= attachment_image_tag(@user, :image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
  <%= @user.name %>
  <%= @user.introduction %>
  <tr>
    <th>フォロー中</th>
    <th><%= link_to @user.follower.count, user_follows_path(@user) %></th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th><%= link_to @user.followed.count, user_followers_path(@user) %></th>
  </tr>
  <% if current_user != @user %>
    <% if current_user.following?(@user) %>
      <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn btn-success" %>
    <% end %>
  <% end %>
  <% if @user == current_user %>
    <div class="row">
      <%= link_to 'プロフィール編集',edit_user_path(@user), class: "col-xs-3 btn btn-default edit_user_#{@user.id}" %>
    </div>
  <% end %>
</div>