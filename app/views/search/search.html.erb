<% if @model == 'user' %>

  <div class="col-xs-9">
      <h2>Users search for '<%= @content %>'</h2>
      <!--users一覧 -->
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @datas.each do |f| %>

          <tr>
            <td><%= attachment_image_tag(f, :image, size: "50x50", fallback: "no_image.jpg") %></td>
            <td><%= f.name %></td>

            <td><%= link_to "Show", user_path(f.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>


 <% else %>

<div class="col-xs-9">
      <h2>Games search for '<%= @content %>'</h2>
      <table class="table">
        <thead>
          <tr>
            <th>title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @datas.each do |f| %>
          <tr>
            <td><%= f.title %></td>
            <td><%= f.feeling %></td>

            <td><%= link_to "詳細", game_path(f.id) %></td>
          </tr>
              <% end %>
        </tbody>
      </table>
    </div>




<% end %>