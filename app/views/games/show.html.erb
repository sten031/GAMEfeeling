<h1>投稿詳細</h1>
<div class="col-xs-12 base">

  <div class="col-xs-4">
    <h2><%= @game.user.name %></h2>
    <%= attachment_image_tag(@game.user, :image, :fill, 50, 50, fallback: "46477.jpg",:size => '70x70') %>
  </div>

  <div class="col-xs-4">
    <h2>タイトル</h2>
    <h3><%= @game.title %></h3>
    <p>カテゴリ: <%= @game.genre %></p>
    <h2>感想</h2>
    <p><%= @game.feeling %></p>
    <%= attachment_image_tag(@game, :image, :fill, 50, 50, fallback: "no-image-mini.jpg",:size => '200x200') %>
    <div id="favorites_buttons_<%= @game.id %>">
      <%= render partial: 'favorites/favorites', locals: { game: @game} %>
    </div>
    <tr>
      <td>コメント数：<%= @game.game_comments.count %></td>
      <% if @game.user == current_user %>
      <td>
        <%= link_to "Edit",edit_game_path(@game), class: "btn-sm btn-success edit_game_#{@game.id}" %>
      </td>
      <td>
        <%= link_to "Destroy",@game, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_game_#{@game.id}" %>
      </td>
    </tr>
      <% end %>
  </div>

  <div class="col-xs-4">
    <div class="comment-form">
      <%= form_for [@game, @game_comment] do |f| %>
        <%= render 'layouts/errors', model: f.object %>
        <%= f.text_area :comment, size: "50x4" %>
        <%= f.submit 'コメントする', class: "btn btn-default" %>
      <% end %>
    </div>
    <h3>コメント一覧</h3>
    <% @game_comments.each do |game_comment| %>
    <div class="col-xs-12">
        <div class="col-xs-3">
          <p><%= game_comment.user.name %></p><br>
        </div>
        <div class="col-xs-6">
        <p><%= game_comment.comment %></p>
        </div>
        <div class="col-xs-3">
        <% unless current_user != game_comment.user %>
          <%= link_to '削除',game_game_comments_path(game_comment.id),class: 'btn-sm btn-default', method: :delete %>
        <% end %>
        </div>
    </div>
    <% end %>
  </div>

</div>