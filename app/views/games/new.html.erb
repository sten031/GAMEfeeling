<h1>新規投稿</h1>
<div class="col-xs-12 base new-padding">
  <%= form_with model: @game, url: games_path,  local: true do |f| %>
    <div class="col-xs-8 col-xs-offset-4">
      <%= render 'layouts/errors', model: f.object %>
      <%= f.label :タイトル %><br>
      <%= f.text_field :title, class: "col-xs-6 form-margin" %>
    </div>

    <div class="col-xs-8 col-xs-offset-4">
      <%= f.label :投稿画像 %><br>
      <%= f.attachment_field :image, class: "col-xs-6 form-margin" %>
    </div>

    <div class="col-xs-8 col-xs-offset-4">
      <%= f.label :感想 %><br>
      <%= f.text_area :feeling, class: "col-xs-6 form-margin" %>
    </div>

    <div class="col-xs-8 col-xs-offset-4">
      <%= f.label :ジャンル %><br>
      <%= f.select :genre, [["その他"], ["アクション"], ["シューティング"], ["アドベンチャー"], ["ロールプレイング"], ["パズル"], ["レースゲーム"], ["シミュレーション"], ["リズムゲーム"], ["スポーツ"]], class: "col-xs-6 form-margin" %>
    </div>

    <div class="actions col-xs-8 col-xs-offset-4">
      <%= f.submit "新規作成", class: "btn btn-primary col-xs-6 form-margin" %>
    </div>
  <% end %>
</div>