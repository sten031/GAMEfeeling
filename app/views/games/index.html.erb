<h1>ゲーム投稿一覧</h1>
<div class="col-xs-12 base">
  <% @games.each do |game| %>
    <div class="col-xs-3">
      <div class="imgWrap">
        <%= link_to(game) do %>
          <%= attachment_image_tag(game, :image, fallback: "no-image-mini.jpg", :size => '250x250') %>
        <% end %>
      </div>
      <h4>
        タイトル：
        <%= link_to(game) do %>
          <%= game.title %>
        <% end %>
      </h4>
      <p>
        ジャンル：
        <%= game.genre %>
      </p>
      <div id="favorites_buttons_<%= game.id %>">
        <%= render partial: 'favorites/favorites', locals: { game: game} %>
      </div>
      <p>
        コメント数：
        <%= game.game_comments.count %>
      </p>
    </div>
  <% end %>
</div>
<div class="col-sx-12" class="text-center">
  <%= paginate @games %>
</div>