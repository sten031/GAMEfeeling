<h1>投稿編集画面</h1>
<div class="col-xs-12 base edit-padding">
  <%= form_with model: @game, url: game_path,  local: true do |f| %>
    <%= render 'layouts/errors', model: f.object %>

      <div class="col-xs-8 col-xs-offset-4">
        <%= f.label :title ,"タイトル"%><br>
        <%= f.text_field :title, class: "col-xs-6 form-margin" %>
      </div>

      <div class="col-xs-8 col-xs-offset-4">
        <%= f.label :feeling ,"感想"%><br>
        <%= f.text_area :feeling, class: "col-xs-6 form-margin" %>
      </div>

      <div class="col-xs-8 col-xs-offset-4">
        <%= f.label :image ,"画像"%><br>
        <%= f.attachment_field :image, class: "col-xs-6 form-margin" %>
      </div>

      <div class="col-xs-8 col-xs-offset-4">
        <%= f.label :ジャンル ,"ジャンル"%><br>
        <%= f.select :genre, [["その他"], ["アクション"], ["シューティング"], ["アドベンチャー"], ["ロールプレイング"], ["パズル"], ["レースゲーム"], ["シミュレーション"], ["リズムゲーム"], ["スポーツ"]], class: "col-xs-6 form-margin" %>
      </div>

      <div class="col-xs-8 col-xs-offset-4">
        <h1><%= f.submit '変更を保存', class: "btn btn-primary form-margin" %></h1>
      </div>

  <% end %>
</div>