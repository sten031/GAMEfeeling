<% if game.favorited_by?(current_user) %>
  <%= link_to game_favorites_path(game.id),method: :delete,remote: true do %>
    <span class="glyphicon glyphicon-heart" aria-hidden="true">
      <%= game.favorites.count %>
    </span>
  <% end %>
<% else %>
  <%= link_to game_favorites_path(game.id),method: :post,remote: true do %>
    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true">
      <%= game.favorites.count %>
    </span>
  <% end %>
<% end %>