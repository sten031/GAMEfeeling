<!DOCTYPE html>
<html>
  <head>
    <title>GAMEfeeling</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-default head">
      <div class="container">
        <div class="nav navbar-nav navbar-left">
          <%= link_to root_path do%>
          <%= image_tag 'icon.jpg',:size => '200x80' %>
          <% end %>
        </div>
      <div class="search">
        <span class="search-form">
          <%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag 'search[content]' %>
            <%= select_tag 'search[model]', options_for_select({ "ユーザー名" => "user", "タイトル名" => "game" }) %>
            <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
            <span class="text_btn">
              <%= submit_tag '検索', class: "btn search_btn" %>
            </span>
            <% end %>
          </span>
        </div>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                 <li> <%= link_to 'マイページ', user_path(current_user), class: 'home' %> </li>
                 <li> <%= link_to '新規投稿', new_game_path(current_user), class: 'home' %> </li>
                 <li> <%= link_to 'ユーザー一覧', users_path, class: 'users' %> </li>
                 <li> <%= link_to '投稿一覧', games_path, class: 'games' %> </li>
                 <li> <%= link_to "ログアウト", destroy_user_session_path,method: :delete, class: "btn" %> </li>
              <% else %>
                 <li> <%= link_to 'Top', root_path, class: 'home' %> </li>
                 <li> <%= link_to 'About', homes_about_path, class: 'about' %> </li>
                 <li> <%= link_to "ログイン", user_session_path, class: "about" %> </li>
                 <li> <%= link_to 'sign up', new_user_registration_path, class: 'sign_up' %> </li>
              <% end %>
            </ul>
        </div>
      </div>
    </header>

    <div class="container">
      <div class="row">
    <%= yield %>
      </div>
    </div>

  <footer>
    <div class="container copyright">
      <div class="row">
       <p>© tanaka 2020</p>
      </div>
    </div>
  </footer>
  </body>
</html>
