<!DOCTYPE html>
<html>
  <head>
    <title>GAMEfeeling</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <header class="navbar navbar-default">

      <div class="container">
        <div class="nav navbar-nav navbar-left">
          <%= link_to "GAMEfeeling", root_path, class: "btn title" %>
        </div>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                 <li> <%= link_to 'マイページ', user_path(current_user), class: 'glyphicon glyphicon-home home' %> </li>
                 <li> <%= link_to 'Users', users_path, class: 'glyphicon glyphicon-user users' %> </li>
                 <li> <%= link_to 'Games', games_path, class: 'glyphicon glyphicon-game games' %> </li>
                 <li> <%= link_to "ログアウト", destroy_user_session_path,method: :delete, class: "btn btn-default btn-block" %> </li>
              <% else %>
                 <li> <%= link_to 'Top', root_path, class: 'glyphicon glyphicon-home home' %> </li>
                 <li> <%= link_to 'About', homes_about_path, class: 'glyphicon glyphicon-link about' %> </li>
                 <li> <%= link_to "ログイン", user_session_path, class: "glyphicon glyphicon-link about" %> </li>
                 <li> <%= link_to 'sign up', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %> </li>
              <% end %>
            </ul>
        </div>
      </div>

    </header>
    <div class="container">
      <div class="row">
    <%= yield %>
      </div>
    </div>
  </body>
</html>
